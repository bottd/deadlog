{
	"name": "scraper",
	"$schema": "../../node_modules/nx/schemas/project-schema.json",
	"sourceRoot": "libs/scraper/src",
	"projectType": "library",
	"targets": {
		"build": {
			"executor": "nx:run-commands",
			"cache": true,
			"inputs": [
				"{projectRoot}/src/**/*",
				"{projectRoot}/tsconfig.json",
				"{workspaceRoot}/tsconfig.base.json"
			],
			"outputs": ["{workspaceRoot}/apps/web/static"],
			"options": {
				"command": "OUTPUT_DIR=apps/web/static tsx --tsconfig=tsconfig.base.json libs/scraper/src/compile.ts",
				"cwd": "."
			}
		},
		"check": {
			"executor": "nx:run-commands",
			"cache": true,
			"inputs": [
				"{projectRoot}/src/**/*",
				"{projectRoot}/tsconfig.json",
				"{workspaceRoot}/tsconfig.base.json"
			],
			"outputs": ["{workspaceRoot}/dist/.tsbuildinfo/scraper"],
			"options": {
				"command": "tsc --noEmit",
				"cwd": "libs/scraper"
			}
		},
		"test": {
			"executor": "nx:run-commands",
			"dependsOn": ["build"],
			"options": {
				"command": "vitest run",
				"cwd": "libs/scraper"
			}
		},
		"lint": {
			"executor": "@nx/eslint:lint",
			"outputs": ["{options.outputFile}"],
			"options": {
				"lintFilePatterns": ["libs/scraper/**/*.{ts,js}"]
			}
		}
	},
	"tags": []
}
