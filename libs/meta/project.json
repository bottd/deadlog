{
	"name": "meta",
	"$schema": "../../node_modules/nx/schemas/project-schema.json",
	"sourceRoot": "libs/meta/src",
	"projectType": "library",
	"targets": {
		"build": {
			"executor": "nx:run-commands",
			"cache": true,
			"inputs": [
				"{projectRoot}/src/**/*",
				"{projectRoot}/tsconfig.json",
				"{workspaceRoot}/tsconfig.base.json"
			],
			"outputs": ["{workspaceRoot}/apps/web/static/og"],
			"options": {
				"command": "DATABASE_URL=file:$PWD/apps/web/static/deadlog.db tsx --tsconfig=tsconfig.base.json libs/meta/src/generate-previews.ts"
			}
		},
		"check": {
			"executor": "nx:run-commands",
			"cache": true,
			"inputs": [
				"{projectRoot}/src/**/*",
				"{projectRoot}/tsconfig.json",
				"{workspaceRoot}/tsconfig.base.json"
			],
			"outputs": ["{workspaceRoot}/dist/.tsbuildinfo/meta"],
			"options": {
				"command": "tsc --noEmit",
				"cwd": "libs/meta"
			}
		},
		"test": {
			"executor": "nx:run-commands",
			"options": {
				"command": "vitest run",
				"cwd": "libs/meta"
			}
		}
	},
	"tags": [],
	"implicitDependencies": ["scraper"]
}
