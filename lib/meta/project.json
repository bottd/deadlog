{
	"name": "meta",
	"$schema": "../../node_modules/nx/schemas/project-schema.json",
	"sourceRoot": "lib/meta/src",
	"projectType": "library",
	"targets": {
		"build": {
			"executor": "nx:run-commands",
			"cache": true,
			"inputs": [
				"{projectRoot}/src/**/*",
				"{projectRoot}/tsconfig.json",
				"{workspaceRoot}/tsconfig.base.json"
			],
			"outputs": ["{workspaceRoot}/app/static/og"],
			"options": {
				"command": "DATABASE_URL=file:$PWD/app/static/deadlog.db tsx --tsconfig=tsconfig.base.json lib/meta/src/generate-previews.ts"
			}
		},
		"check": {
			"executor": "nx:run-commands",
			"cache": true,
			"inputs": [
				"{projectRoot}/src/**/*",
				"{projectRoot}/tsconfig.json",
				"{workspaceRoot}/tsconfig.base.json"
			],
			"outputs": ["{workspaceRoot}/dist/.tsbuildinfo/meta"],
			"options": {
				"command": "tsc --noEmit",
				"cwd": "lib/meta"
			}
		},
		"test": {
			"executor": "nx:run-commands",
			"options": {
				"command": "vitest run",
				"cwd": "lib/meta"
			}
		},
		"lint": {
			"executor": "@nx/eslint:lint",
			"outputs": ["{options.outputFile}"],
			"options": {
				"lintFilePatterns": ["lib/meta/**/*.{ts,js}"]
			}
		}
	},
	"tags": [],
	"implicitDependencies": ["scraper"]
}
